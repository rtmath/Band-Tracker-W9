@{
  Layout="Shared/_Layout.cshtml";
}

<h2>@Model["venue"].Name</h2>

<div class="well white">

<h4>@Model["venue"].Name has hosted the following bands:</h4>
@foreach (var band in Model["bands"])
{
    <li>@band.Name</li>
}

<br>
<a href='/venue/add/band/@Model["venue"].Id'>Add a Band to this Venue's show history</a>
</div>
<br>
<a class="grey" href="/">Return to home</a>
