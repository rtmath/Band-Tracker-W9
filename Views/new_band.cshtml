@{
  Layout="Shared/_Layout.cshtml";
}

@if (Model.Count < 1)
{
    <h3>You need to enter a venue first!</h3>
}

@if (Model.Count > 0)
{
    <h3>Add new Band:</h3>

    <div class="well white">
        <form action="/band/add" method="post">
            <label>Enter band name:</label>
            <input type="text" name="new-band" required>
            <hr>
            <label>Select a venue:</label>
            <select name="new-venue">
                @foreach (var venue in Model)
                {
                    <option value=@venue.Id>@venue.Name</option>
                }
            </select>
            <button type="submit" name="button">Submit</button>
        </form>
    </div>
}
<a class="grey" href="/">Return to home</a>
